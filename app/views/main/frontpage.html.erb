<main class="container">
  <% user = active_user %>
  <div class='row mb-4'>
    <% if logged_in? %>
      <h3>Welcome Back: <%=user.name%></h3>
    <% else %>
      <h3>Login Required:</h3>
    <%end%>
  </div>
  <% if logged_in? %>
    <div class='row mb-4'>
      <%= link_to 'Open your keychains', user_path(user), class: "btn btn-primary btn-lg btn-block" %>
    </div>
    <div class='row mb-4'>
      <%= form_with url: logout_url, method: 'post', class: 'col-12' do |form| %>
        <input type='submit' value='logout'  class='btn btn-secondary btn-lg btn-block'>
      <% end %>
    </div>
  <% else %>
    <%= render partial: 'layouts/btn_primary', locals: {text: 'Login', url: login_url } %>
    <%= render partial: 'layouts/btn_primary', locals: {text: 'Signup', url: signup_url } %>
    <%= render partial: 'layouts/btn_primary', locals: {text: 'Login/Signup with Github', url: '/auth/github' } %>
  <%end%>

  <hr class="mb-4">

  <div class='row'><h3>Testimonial:</h3></div>

  <div class='row'>
    <ul class="list-group">
      <li class="list-group-item">John Doe - <q>Do not use this site</q>.</li>
      <li class="list-group-item">Jane Smith - <q>All my accounts got hacked</q>.</li>
      <li class="list-group-item">David Anon - <q>The account deletion feature is the best part!</q></li>
    </ul>
  </div>
</main>
