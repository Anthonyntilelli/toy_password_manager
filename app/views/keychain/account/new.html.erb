<main class="container">
  <div class='row mb-3'>
      <h2 class=" col-12 display-3 text-center"> Create New Accout for <%= @keychain.name %></h2>
  </div>

  <div class='row mb-3'>
    <div class="col-sm-12">
      <%= form_with model: Account.new, url: {action: "create"}, class: ['col-12', 'needs-validation'] do |form| %>
        <%= form.hidden_field(:kc, value: @keychain.id) %>
        <%= form.label :name, "Account Name" %>
        <%= form.text_field :name, required: true, class: "form-control"%> <br>
        <%= form.label :url, "Url"%>
        <%= form.text_field :url, required: true, class: "form-control"%> <br>
        <%= form.label :username, "Account Username"%>
        <%= form.text_field :username, required: true, class: "form-control"%> <br>
        <%= form.label :password, "Account Password (Not you User password)"%>
        <%= form.text_field :password, required: true, class: "form-control"%> <br>
        <%= form.submit "Create", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>

  <hr class='mb-3'>
  <div class='row my-3'>
    <%= link_to 'Back to Keychain list', user_path(@user), :class => "btn btn-secondary btn-sm col-sm-12" %>
  </div>
  <div class='row my-3'>
    <%= link_to 'Frontpage', '/', :class => "btn btn-secondary btn-sm col-sm-12" %>
  </div>
</main>
